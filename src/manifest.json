{
  "manifest_version": 3,
  "name": "Minimalist New Tab",
  "version": "1.0",
  "description": "A minimalist new tab page.",
  "author": "Sorano",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "geolocation",
    "storage"
  ],
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Minimalist New Tab"
  }
}